#include<iostream>
#include<string>
#include "HeartRates.h"
using namespace std;


int main()
{
	string name ;
	string soyad ;
	int a, b, c;
	cout << "Please enter name Surname \nBirth day (order of parameter Month-Day-Year): ";
	getline(cin, name);
	getline(cin, soyad);
	cin >> a >> b >> c;

	HeartRates kemal{ name,soyad,a,b,c };
	kemal.calculate();
	kemal.displayPersonsInfo();

	return 0;
}


